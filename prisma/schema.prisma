// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Comment {
  id           String   @id @default(cuid())
  universityId String
  name         String
  surname      String
  email        String
  content      String
  createdAt    DateTime @default(now())

  @@index([universityId])
}

